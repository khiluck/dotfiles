#!/bin/bash

start_webcam(){
	touch /tmp/webcam && sleep 0.5s && refbar
	mpv --demuxer-lavf-o=video_size=640x360,input_format=mjpeg av://v4l2:/dev/video0 --profile=low-latency --untimed -vf "hflip" --title=webcam --no-cache --no-osc --no-input-default-bindings
}


stop_webcam(){
	rm -f /tmp/webcam && refbar
	pkill -2 mpv
}



stop_webcam || start_webcam


