#!/bin/bash

start_webcam(){
	touch /tmp/webcam && sleep 0.5s && refbar
	#mpv -vf "hflip" --geometry=-0-0 --autofit=30% /dev/video0 
	mpv --no-cache --no-osc --no-input-default-bindings --profile=low-latency --input-conf=/dev/null --title=webcam /dev/video0 -vf "hflip"
}


stop_webcam(){
	rm -f /tmp/webcam && refbar
	pkill -2 mpv
}



stop_webcam || start_webcam


